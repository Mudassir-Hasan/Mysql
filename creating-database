# creating database :
create database IF NOT EXISTS students_record ;

# using this database : 
USE students_record ;

# creating all tables for this database :
# table 1 :
create table IF NOT EXISTS it_depart_std (
	serial_number INT NOT NULL UNIQUE,
	student_name VARCHAR(20) NOT NULL,
    age INT NOT NULL DEFAULT 18,
    campus VARCHAR(30) DEFAULT "baghdad" ,
    city VARCHAR(30) DEFAULT "bahawalpur" 
    
);

# table 2 : 
create table IF NOT EXISTS cs_depart_std (
	serial_number INT NOT NULL UNIQUE,
	student_name VARCHAR(20) NOT NULL,
    age INT NOT NULL DEFAULT 18  CHECK (age>16),
	campus VARCHAR(30) DEFAULT "baghdad" ,
    city VARCHAR(30) DEFAULT "bahawalpur" 
    
);

# now insert values in tables : 
# in table 1 :
INSERT INTO it_depart_std  VALUES  (1 , "Mudassir" , 19 ,"Main", "chishtian");
INSERT INTO it_depart_std(serial_number, student_name, age)  VALUES  (2 , "Abadullah" , 21 );
INSERT INTO it_depart_std(serial_number, student_name, age, city)  VALUES  (3 , "Mubashir" , 19 , "Hamalia");

# in table 2 :

INSERT INTO cs_depart_std(serial_number, student_name, age)  VALUES  (1 , "Kashif" , 26);
INSERT INTO cs_depart_std(serial_number, student_name, age, city)  VALUES  (2 , "Akhter" , 30 , "Lodhran");
INSERT INTO cs_depart_std  VALUES  (3 , "Umair" , 27 ,"Bahawalnager", "chishtian");
INSERT INTO cs_depart_std(serial_number, student_name, age)  VALUES  (4 , "Waqas" , 24 );  

# showing the both tables : 
-- table 1 :-
SELECT * FROM students_record.it_depart_std; 

-- table 2 :- 
SELECT * FROM students_record.cs_depart_std; 
